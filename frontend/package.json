{
  "name": "koi-carp-frontend",
  "version": "0.1.0",
  "description": "AI-powered desktop assistant",
  "author": "Koi Carp Team",
  "main": "electron.js",
  "homepage": "./",
  "private": true,
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "web-vitals": "^5.1.0"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "electron-is-dev": "^2.0.0",
    "wait-on": "^9.0.3"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-build": "npm run build && electron-builder"
  },
  "build": {
    "appId": "com.koicarp.assistant",
    "productName": "Koi Carp Assistant",
    "files": [
      "build/**/*",
      "electron.js",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "public/electron.js",
        "to": "electron.js"
      }
    ],
    "directories": {
      "buildResources": "public"
    },
    "win": {
      "target": "nsis",
      "icon": "public/koi-icon.png"
    },
    "linux": {
      "target": "AppImage",
      "category": "Utility"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
